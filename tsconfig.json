{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
